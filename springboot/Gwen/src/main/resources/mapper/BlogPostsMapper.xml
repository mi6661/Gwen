<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gulu.gwen.dao.BlogPostsDao">
    <!--返回所有数据-->
    <select id="getAll"
            resultType="com.gulu.gwen.entity.BlogPosts">
        SELECT * FROM blog_posts
    </select>
    <select id="getById" resultType="com.gulu.gwen.entity.BlogPosts">
        SELECT * FROM blog_posts
        WHERE id=#{id}
    </select>

</mapper>